						$('#slider_viewed_products select.form-control option:nth-child(1)').attr('selected', 'selected');
						$( document ).ready(function() {
							get_product_option_id_slider_viewed_products ({{ product['product_id'] }});
						});
						function get_product_option_id_slider_viewed_products (product_id) {
							var sel_option_id = document.getElementById('slider_viewed_products_soption_'+product_id);
							var option_id = sel_option_id.options[sel_option_id.selectedIndex].getAttribute('product_option_id');
							sel_option_id.setAttribute('name', 'option['+option_id+']');
							update_prices_product_viewed_products (product_id,1);
						}
						--></script>
					{% elseif (product['options']) %} 
						<div class="well well-sm product-info">
							<div id="option_{{ product['product_id'] }}" class="options">
							{% for option in product['options'] %} 
								{% if (option['type'] == 'select') %} 
									<div class="form-group{{ option['required'] ? ' required' : '' }}">
										<label class="control-label" for="slider_viewed_products_input-option{{ option['product_option_id'] }}">{{ option['name'] }}:</label>
										<div id="input-option{{ option['product_option_id'] }}">
											<select onchange="update_prices_product_viewed_products({{ product['product_id'] }},{{ product['minimum'] }});" name="option[{{ option['product_option_id'] }}]" id="slider_viewed_products_input-option{{ option['product_option_id'] }}" class="form-control">
