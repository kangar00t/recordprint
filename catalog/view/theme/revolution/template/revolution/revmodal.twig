<div class="popup_notification modalokno">
<div class="popup_notification_heading">{{ modal_heading_title }}</div>
<div class="popup_notification_message">{{ modal_message }}</div>
{% if (modal_buttons) %} 
<div class="popup-footer">
<button onclick="window.close();">{{ text_no }}</button>
<a class="popup-modal-dismiss" href="#">{{ text_yes }}</a>
</div>
{% endif %} 
</div>
<script><!--
var Cookie = {
	set: function(name, value, days) {
		var domain, domainParts, date, expires, host;
		if (days) {
			date = new Date();
			date.setTime(date.getTime()+(days*24*60*60*1000));
			expires = "; expires="+date.toGMTString();
		} else {
			expires = "";
		}
		host = location.host;
		if (host.split('.').length === 1) {
			document.cookie = name+"="+value+expires+"; path=/";
		} else {
			domainParts = host.split('.');
			domainParts.shift();
			domain = '.'+domainParts.join('.');
			document.cookie = name+"="+value+expires+"; path=/";
			if (Cookie.get(name) == null || Cookie.get(name) != value) {
				domain = '.'+host;
				document.cookie = name+"="+value+expires+"; path=/";
			}
		}
		return domain;
	},
	get: function(name) {
		var nameEQ = name + "=";
		var ca = document.cookie.split(';');
		for (var i=0; i < ca.length; i++) {
			var c = ca[i];
			while (c.charAt(0)==' ') {
				c = c.substring(1,c.length);
			}
			if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
		}
		return null;
	}
};

if(!Cookie.get('revmodal')) {
	{% if (modal_time == '888') %} 
		Cookie.set('revmodal', '', -1);
	{% elseif (modal_time == '0') %} 
		Cookie.set('revmodal', true, '0.05');
	{% else %} 
		Cookie.set('revmodal', true, {{ modal_time }});
	{% endif %} 
}
//--></script>