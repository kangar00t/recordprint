<div class="rev_slider rev_blog_mod_n_{{ module }} rev_blog_mod_left_column{% if (not image_status) %} rev_blog_mod_noimage_status{% endif %}{% if (heading_title) %} rev_blog_mod_heading_title{% else %} rev_blog_mod_noheading_title{% endif %}{% if (slider) %} rev_blog_mod_slider{% endif %}">
	{% if (heading_title) %} 
		<div class="heading_h"><h3>{{ heading_title }}</h3></div>
	{% endif %} 
	<div class="row">
		<div id="blog_mod" class="modulblog_mod">
			{% for blog in blogs %} 
			<div class="col-lg-12">
				<div class="blog-list vertical-sreview transition">
					<div class="caption review-caption">
						{% if (image_status) %} 
						<div class="image">
							<a href="{{ blog['href'] }}"><img class="img-responsive" src="{{ blog['thumb'] }}" alt="{{ blog['title'] }}" title="{{ blog['title'] }}" /></a>
						</div>
						{% endif %} 
						<div class="opisb">
						<h4><a href="{{ blog['href'] }}">{{ blog['title'] }}</a></h4>
						{% if (data_status) %}<p>{% if (category_blog_grid is not defined or not category_blog_grid) %}<i class="fa fa-clock-o"></i>{% endif %}{{ blog['data_added'] }}</p>{% endif %} 
						</div>
						<div class="description">{{ blog['description'] }}</div>
					</div>
				</div>
			</div>
			{% endfor %} 
		</div>
	</div>
	{% if (slider) %} 
	<script><!--
		$(".rev_blog_mod_n_{{ module }} .modulblog_mod").owlCarousel({
			responsiveBaseWidth: '.rev_blog_mod_n_{{ module }} .modulblog_mod',
			itemsCustom: [[0, 1], [750, 2], [970, 3], [1170, 3]],
			mouseDrag: true,
			touchDrag: true,
			navigation: true,
			navigationText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
			{% if (heading_title) %} 
			pagination: true
			{% else %} 
			pagination: false
			{% endif %} 
		});
	//--></script>
	{% endif %} 
</div>